<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Recap" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_ateneo</item>
        <item name="colorPrimaryVariant">@color/blue_sea</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_pastel</item>
        <item name="colorSecondaryVariant">@color/gray_pastel_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/Widget.App.ActionBar</item>
    </style>

    <style name="Theme.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/blue_ateneo</item>
        <item name="colorPrimaryDark">@color/blue_ateneo</item>
        <item name="colorAccent">@color/gray_pastel_dark</item>
        <item name="android:statusBarColor">@color/blue_ateneo</item>
    </style>
</resources>